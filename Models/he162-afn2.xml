<?xml version="1.0"?>
<!-- auto direction finder -->
<PropertyList> 
    <path>he162-afn2.ac</path>
    

   <animation> 
      <type>rotate</type>
      <object-name>needle2</object-name>
      <property>instrumentation/nav/heading-needle-deflection</property>
      <factor>2</factor>
      <center> 
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0.026</z-m>
      </center>
      <axis> 
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

