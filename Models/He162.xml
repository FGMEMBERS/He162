<!-- pilot -->

    <animation> 
      <type>select</type>
      <object-name>CPT-Pilot-Head</object-name>
      <object-name>CPT-Pilot-Body</object-name>
      <object-name>CPT-Helmet</object-name>
      <object-name>CPT-Visor</object-name>
      <object-name>CPT-Facemask</object-name>
      <object-name>CPT-C-Stick</object-name>
      <condition>
       <not>
       <equals>
	<property>sim/current-view/view-number</property>
	<value>0</value>
       </equals>
       </not>
      </condition>
    </animation>

    <model> 
      <path>Aircraft/He162/Models/blackout.xml</path>
	  <name>Blackout</name>
      <offsets> 
        <x-m>-1.85</x-m>
        <y-m>0.00</y-m>
        <z-m>0.28</z-m>
      </offsets>
    </model>

    <animation> 
      <type>select</type>
      <object-name>Blackout</object-name>
      <condition> 
        <greater-than-equals> 
          <property>/sim/current-view/view-number</property>
          <value>0</value>
        </greater-than-equals>
      </condition>
    </animation>

